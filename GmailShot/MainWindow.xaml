<Window x:Class="GmailShot.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:cefSharp="clr-namespace:CefSharp.Wpf;assembly=CefSharp.Wpf"
        xmlns:local="clr-namespace:GmailShot"
        mc:Ignorable="d"
        Title="GmailShot" WindowState="Maximized">
    <Grid>
        <cefSharp:ChromiumWebBrowser Grid.Row="0" Grid.Column="0" Name="browser" HorizontalAlignment="Stretch" VerticalAlignment="Stretch"
                                     LoadingStateChanged="ChromiumWebBrowser_LoadingStateChanged" 
                                     Address="mail.google.com" />
    </Grid>
</Window>
